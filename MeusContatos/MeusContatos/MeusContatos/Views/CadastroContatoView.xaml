<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeusContatos.Views.CadastroContatoViews"
             Title="Adicionar Contato">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry Text="{Binding NomeContato}" 
                   Placeholder="Nome" />

            <Entry Text="{Binding Celular}"
                   Placeholder="Celular" />
            
            <Entry Text="{Binding TelefoneFixo}"
                   Placeholder="Telefone" />

            <Button Text="Adicionar Contato" 
                    TextColor="White"
                    BackgroundColor="#1E90FF" 
                    Command="{Binding AdicionarContatoCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>